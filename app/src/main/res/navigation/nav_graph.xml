<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ierusalem.employeemanagement.features.auth.presentation.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_staffHomeFragment"
            app:destination="@id/staffHomeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ierusalem.employeemanagement.features.home.presentation.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

        <action
            android:id="@+id/action_homeFragment_to_composeFragment"
            app:destination="@id/composeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_homeFragment_to_workDescriptionFragment"
            app:destination="@id/workDescriptionFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_homeFragment_to_privateJobsFragment"
            app:destination="@id/privateJobsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

        <action
            android:id="@+id/action_homeFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_homeFragment_to_forInformationFragment"
            app:destination="@id/forInformationFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_homeFragment_to_personalStatisticsFragment"
            app:destination="@id/personalStatisticsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ierusalem.employeemanagement.features.profile.presentation.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.ierusalem.employeemanagement.features.edit_profile.presentation.EditProfileFragment"
        android:label="EditProfileFragment">
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/composeFragment"
        android:name="com.ierusalem.employeemanagement.features.create_work.presentation.ComposeFragment"
        android:label="ComposeFragment">

        <action
            android:id="@+id/action_composeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ierusalem.employeemanagement.features.settings.SettingsFragment"
        android:label="SettingsFragment" />

    <fragment
        android:id="@+id/staffHomeFragment"
        android:name="com.ierusalem.employeemanagement.features.staff_home.presentation.StaffHomeFragment"
        android:label="StaffHomeFragment">

        <action
            android:id="@+id/action_staffHomeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_staffHomeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

        <action
            android:id="@+id/action_staffHomeFragment_to_workDescriptionFragment"
            app:destination="@id/workDescriptionFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />

        <action
            android:id="@+id/action_staffHomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/staffHomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_staffHomeFragment_to_staffForInformationFragment"
            app:destination="@id/staffForInformationFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_staffHomeFragment_to_personalStatisticsFragment"
            app:destination="@id/personalStatisticsFragment" />

    </fragment>

    <fragment
        android:id="@+id/workDescriptionFragment"
        android:name="com.ierusalem.employeemanagement.features.work_description.presentation.WorkDescriptionFragment"
        android:label="WorkDescriptionFragment">
        <action
            android:id="@+id/action_workDescriptionFragment_to_staffHomeFragment"
            app:destination="@id/staffHomeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/workDescriptionFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_workDescriptionFragment_to_editFragment"
            app:destination="@id/editFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_workDescriptionFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>

    <fragment
        android:id="@+id/privateJobsFragment"
        android:name="com.ierusalem.employeemanagement.features.private_jobs.presentation.PrivateJobsFragment"
        android:label="PrivateJobsFragment">
        <action
            android:id="@+id/action_privateJobsFragment_to_workDescriptionFragment"
            app:destination="@id/workDescriptionFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.ierusalem.employeemanagement.features.statistics.presentation.StatisticsFragment"
        android:label="StatisticsFragment" />

    <fragment
        android:id="@+id/forInformationFragment"
        android:name="com.ierusalem.employeemanagement.features.for_information.presentation.ForInformationFragment"
        android:label="ForInformationFragment">
        <action
            android:id="@+id/action_forInformationFragment_to_informationDescriptionFragment"
            app:destination="@id/informationDescriptionFragment" />

    </fragment>

    <fragment
        android:id="@+id/staffForInformationFragment"
        android:name="com.ierusalem.employeemanagement.features.staff_for_information.presentation.StaffForInformationFragment"
        android:label="StaffForInformationFragment">
        <action
            android:id="@+id/action_staffForInformationFragment_to_informationDescriptionFragment"
            app:destination="@id/informationDescriptionFragment" />
    </fragment>

    <fragment
        android:id="@+id/informationDescriptionFragment"
        android:name="com.ierusalem.employeemanagement.features.information_description.presentation.InformationDescriptionFragment"
        android:label="InformationDescriptionFragment" >

        <action
            android:id="@+id/action_informationDescriptionFragment_to_forInformationEditFragment"
            app:destination="@id/forInformationEditFragment" />

        <action
            android:id="@+id/action_informationDescriptionFragment_to_forInformationFragment"
            app:popUpTo="@id/forInformationFragment"
            app:popUpToInclusive="true"
            app:destination="@id/forInformationFragment" />
    </fragment>

    <fragment
        android:id="@+id/personalStatisticsFragment"
        android:name="com.ierusalem.employeemanagement.features.personal_statistics.presentation.PersonalStatisticsFragment"
        android:label="PersonalStatisticsFragment" />

    <fragment
        android:id="@+id/editFragment"
        android:name="com.ierusalem.employeemanagement.features.edit_work.presentation.EditFragment"
        android:label="EditFragment">
        <action
            android:id="@+id/action_editFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/forInformationEditFragment"
        android:name="com.ierusalem.employeemanagement.features.for_information_edit.presentation.ForInformationEditFragment"
        android:label="ForInformationEditFragment" >

        <action
            android:id="@+id/action_forInformationEditFragment_to_forInformationFragment"
            app:popUpTo="@id/forInformationFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpToInclusive="true"
            app:destination="@id/forInformationFragment" />

    </fragment>

</navigation>